<div>Private page</div>

{{#if user}}
<div>
  <h1>Who's the best developer?</h1>
  <h1>You are, <span style="color: orange;">{{ user.username}}</span>. You are! </h1>
  <img src="http://media.giphy.com/media/UsK5GqD3e0huU/giphy.gif" alt="You rock.">
  <form action="/edit/{{user._id}}" method="get">
    <button>Edit profile</button>
  </form>
  <a href="/">Index</a>
</div>

<div id="info">
  <h2>{{user.nick}}</h2>
  <h3>{{user.username}}</h3>
  <h4>{{user.birthyDay}}</h4>
  <h4>{{user.game}}</h4>
  <h4>{{user.role}}</h4>
</div>
{{/if}}